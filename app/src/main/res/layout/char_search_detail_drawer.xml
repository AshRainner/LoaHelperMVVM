<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_view_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:orientation="vertical"
    style="@style/AppBottomSheetDialogTheme"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:visibility="gone"
            android:id="@+id/armor_drawer"
            layout="@layout/char_search_detail_armor_dialog">
        </include>
        <include
            android:visibility="gone"
            android:id="@+id/accessory_drawer"
            layout="@layout/char_search_detail_accessory_dialog">
        </include>
        <include
            android:visibility="gone"
            android:id="@+id/engraving_drawer"
            layout="@layout/char_search_detail_engraving_dialog">
        </include>
        <include
            android:visibility="gone"
            android:id="@+id/gem_drawer"
            layout="@layout/char_search_detail_gem_dialog">
        </include>
        <include
            android:visibility="gone"
            android:id="@+id/card_drawer"
            layout="@layout/char_search_detail_card_dialog">
        </include>
        <include
            android:visibility="gone"
            android:id="@+id/rune_drawer"
            layout="@layout/char_search_detail_rune_dialog">
        </include>
        <include
            android:visibility="gone"
            android:id="@+id/skill_drawer"
            layout="@layout/char_search_detail_skill_dialog">
        </include>
        <include
            android:visibility="gone"
            android:id="@+id/tripod_drawer"
            layout="@layout/char_search_detail_tripod_dialog">
        </include>
        <include
            android:visibility="gone"
            android:id="@+id/avatar_drawer"
            layout="@layout/char_search_detail_avatar_dialog">
        </include>
        <include
            android:visibility="gone"
            android:id="@+id/collection_drawer"
            layout="@layout/char_search_detail_collection_equ_dialog">
        </include>
    </LinearLayout>
    <Button
        android:id="@+id/char_search_detail_drawer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="확인"></Button>
</LinearLayout>