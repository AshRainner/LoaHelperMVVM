<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/draw_view_main"
    style="@style/AppBottomSheetDialogTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/char_search_detail_drawer_avatar_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/legend_background"
                    android:src="@drawable/test_avatar"></ImageView>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:gravity="left|center"
                android:layout_weight="0">

                <TextView
                    android:id="@+id/char_search_detail_drawer_avatar_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="과감한 도약의 총"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    android:textStyle="bold"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/char_search_detail_drawer_avatar_grade_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전설 무기 아바타"
                        android:textColor="@color/black"
                        android:textSize="7pt"></TextView>
                    <TextView
                        android:id="@+id/char_search_detail_drawer_avatar_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | 건슬링어 전용"
                        android:textColor="@color/black"
                        android:textSize="7pt"></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/char_search_detail_drawer_avatar_default_effect"
            android:layout_marginTop="10dp"
            android:layout_marginBottom = "10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="민첩 +2.00%"
            android:textSize="7pt"
            android:textStyle="bold"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/char_search_detail_drawer_avatar_tendencies_effect"
            android:layout_marginTop="10dp"
            android:layout_marginBottom = "10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지성 +5\n담력 +5\n매력 +5\n친절 +5"
            android:textSize="7pt"
            android:textStyle="bold"
            android:textColor="@color/black">
        </TextView>
    </LinearLayout>
</LinearLayout>
