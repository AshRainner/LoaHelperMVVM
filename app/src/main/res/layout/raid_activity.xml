<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/banner"></ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:columnCount="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.lostark.loahelper.customview.RaidButtonView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/valtan_button"
                    android:layout_margin="5dp"
                    app:raidButtonImageSrc="@drawable/valtan"
                    app:raidButtonText="발탄"></com.lostark.loahelper.customview.RaidButtonView>

                <com.lostark.loahelper.customview.RaidButtonView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/biackiss_button"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:raidButtonImageSrc="@drawable/biackiss"
                    app:raidButtonText="비아키스"></com.lostark.loahelper.customview.RaidButtonView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.lostark.loahelper.customview.RaidButtonView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/koukusaton_button"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:raidButtonImageSrc="@drawable/koukusaton"
                    app:raidButtonText="쿠크세이튼"></com.lostark.loahelper.customview.RaidButtonView>

                <com.lostark.loahelper.customview.RaidButtonView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/abrelshud_button"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    app:raidButtonImageSrc="@drawable/abrelshud"
                    app:raidButtonText="아브렐슈드"></com.lostark.loahelper.customview.RaidButtonView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.lostark.loahelper.customview.RaidButtonView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/illiakan_button"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    app:raidButtonImageSrc="@drawable/illiakan"
                    app:raidButtonText="일리아칸"></com.lostark.loahelper.customview.RaidButtonView>

                <com.lostark.loahelper.customview.RaidButtonView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/kayangel_button"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    app:raidButtonImageSrc="@drawable/kayangel"
                    app:raidButtonText="카양겔"></com.lostark.loahelper.customview.RaidButtonView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.lostark.loahelper.customview.RaidButtonView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/ivorytower_button"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    app:raidButtonImageSrc="@drawable/ivorytower"
                    app:raidButtonText="상아탑"></com.lostark.loahelper.customview.RaidButtonView>
            </LinearLayout>
        </GridLayout>
    </ScrollView>
</LinearLayout>