<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.MainActivity"
    android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/banner"></ImageView>

    <EditText
        android:id="@+id/engraving_edit_text"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp"
        android:inputType="text"
        android:maxLines="1"
        android:ellipsize="end"
        android:hint="ex)원예저타아피"
        android:textColorHint="#828282"
        android:textColor="@color/black">
    </EditText>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/white">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/selected_engraving_view_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/minus_selected_engraving_view_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2.5dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2.5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f1f3f5"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp">

                    <com.lostark.loahelper.customview.AccessoryView
                        android:id="@+id/neck_lace_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"></com.lostark.loahelper.customview.AccessoryView>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f1f3f5"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp">

                    <com.lostark.loahelper.customview.AccessoryView
                        android:id="@+id/ear_ring_view_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:accessoryImageSrc="@drawable/earring"></com.lostark.loahelper.customview.AccessoryView>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2.5dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2.5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f1f3f5"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp">

                    <com.lostark.loahelper.customview.AccessoryView
                        android:id="@+id/ear_ring_view_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:accessoryImageSrc="@drawable/earring"></com.lostark.loahelper.customview.AccessoryView>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f1f3f5"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp">

                    <com.lostark.loahelper.customview.AccessoryView
                        android:id="@+id/ring_view_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:accessoryImageSrc="@drawable/ring"></com.lostark.loahelper.customview.AccessoryView>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2.5dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2.5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f1f3f5"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp">

                    <com.lostark.loahelper.customview.AccessoryView
                        android:id="@+id/ring_view_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:accessoryImageSrc="@drawable/ring"></com.lostark.loahelper.customview.AccessoryView>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f1f3f5"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp">

                    <com.lostark.loahelper.customview.AccessoryView
                        android:id="@+id/ability_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:accessoryImageSrc="@drawable/ablitystone"></com.lostark.loahelper.customview.AccessoryView>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2.5dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2.5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f1f3f5"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp">

                    <com.lostark.loahelper.customview.BookView
                        android:id="@+id/book_view_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"></com.lostark.loahelper.customview.BookView>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2.5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#f1f3f5"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp">

                    <com.lostark.loahelper.customview.BookView
                        android:id="@+id/book_view_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:accessoryImageSrc="@drawable/earring"></com.lostark.loahelper.customview.BookView>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>