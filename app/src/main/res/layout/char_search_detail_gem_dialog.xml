<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/draw_view_main"
    style="@style/AppBottomSheetDialogTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/char_search_detail_drawer_gem_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ancient_background"
                    android:src="@drawable/necklace"></ImageView>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:gravity="left|center"
                android:layout_weight="0">

                <TextView
                    android:id="@+id/char_search_detail_drawer_gem_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9레벨 멸화의 보석"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    android:textStyle="bold"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/char_search_detail_drawer_gem_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전설 보석"
                        android:textColor="@color/black"
                        android:textSize="7pt"></TextView>
                    <TextView
                        android:id="@+id/char_search_detail_drawer_gem_tier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | 티어 3"
                        android:textColor="@color/black"
                        android:textSize="7pt"></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/char_search_detail_drawer_gem_detail"
            android:layout_marginTop="10dp"
            android:layout_marginBottom = "10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[포커스 샷] 피해 30% 증가 "
            android:textSize="8pt"
            android:textStyle="bold"
            android:textColor="@color/black">
        </TextView>
    </LinearLayout>
</LinearLayout>
